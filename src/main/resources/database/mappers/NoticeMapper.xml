<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		 <mapper namespace="com.iu.spring.notice.NoticeListDAO">
		 	<select id="getList" resultType="NoticeDTO">
		 		SELECT * FROM NOTICE ORDER BY NUM DESC
		 	</select>
		 	
		 	<select id="getDetail" parameterType="NoticeDTO" resultType="NoticeDTO">
		 		SELECT * FROM NOTICE WHERE NUM = #{num}
		 	</select>
		 	
		 	<insert id="addNotice" parameterType="NoticeDTO">
		 		INSERT INTO VALUES (NOTICE_SEQ.NEXTVAL, #{title},#{contents},#{writer},SYSDATE,0)
		 	</insert>
		 	
		 	
		 	<update id="updateHit">
		 		UPDATE NOTICE SET HIT=HIT+1 WHERE NUM = #{num}
		 	</update>
		 
		 </mapper>