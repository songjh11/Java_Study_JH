<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		 <mapper namespace="com.iu.spring.board.qna.QnaDAO">
		 
		 	<sql id="search">
		 		WHERE
			    	<choose>
			    		<when test="kind=='title'">TITLE</when>
			    		<when test="kind=='writer'">WRITER</when>
			    		<otherwise>CONTENTS</otherwise>
			    	</choose>
			    LIKE '%'||#{search}||'%'
		 	</sql>
		 
		 	<insert id="setReplyAdd" parameterType="QnaDTO">
		 		<selectKey keyProperty="num" order="BEFORE" resultType="Long">
		 			SELECT BOARD_SEQ.NEXTVAL FROM DUAL
		 		</selectKey>
		 		INSERT INTO QNA 
		 		VALUES 
		 		(#{num}, #{title}, #{contents}, #{writer}, SYSDATE, 0, #{ref}, #{step}, #{depth})
		 	</insert>
		 	
		 	<update id="setStepUpdate" parameterType="QnaDTO">
		 		UPDATE QNA SET STEP=STEP+1 WHERE REF=#{ref} AND STEP>#{step}
		 	</update>
		 
		 	<select id="getList" resultType="QnaDTO" parameterType="Pager">
		 		SELECT * FROM 
		 		(SELECT ROWNUM R, Q.* FROM
		 		(SELECT * FROM QNA
		 			<include refid="search"></include>
		 		 ORDER BY REF DESC, STEP ASC) Q)
		 		WHERE R BETWEEN #{startRow} AND #{lastRow}
		  	</select>
		  	
		  	
		  	<select id="getPageCount" resultType="Long" parameterType="Pager">
    	 		SELECT COUNT(NUM) FROM QNA
    	 		<include refid="search"></include>
    	 	</select>
		 	
		 	<select id="getDetail" parameterType="BoardDTO" resultMap="getDetailResult">
		 			SELECT Q.NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT, FILENUM, FILENAME 
				 		FROM QNA Q
						LEFT JOIN
						QNAFILE QF
						ON Q.NUM = QF.NUM
						WHERE Q.NUM = #{num}
			</select>
		 	
		 	
		 	<insert id="setAdd" parameterType="BoardDTO">
		 		<selectKey keyProperty="num" order="BEFORE" resultType="Long">
		 			SELECT BOARD_SEQ.NEXTVAL FROM DUAL
		 		</selectKey>
		 		INSERT INTO QNA 
		 		VALUES (#{num}, #{title}, #{contents}, #{writer}, SYSDATE, 0, #{num}, 0, 0)
		 	</insert>
		 	
		 	
		 	<update id="setUpdate" parameterType="BoardDTO">
		 		UPDATE QNA SET TITLE=#{title}, CONTENTS=#{contents} WHERE NUM = #{num}
    	 	</update>
    	 	
    	 	<delete id="setDelete" parameterType="BoardDTO">
    	 		DELETE QNA WHERE NUM = #{num}
    	 	</delete>
    	 	
    	 	<update id="updateHit" parameterType="BoardDTO">
	    	 	UPDATE QNA SET HIT=HIT+1 WHERE NUM=#{num}
    	 	</update>
    	 	
    	 	<insert id="setAddFiles" parameterType="BoardFileDTO">
		 		INSERT INTO QNAFILE (FILENUM, FILENAME, ORINAME, NUM) 
		 		VALUES (FILE_SEQ.NEXTVAL, #{fileName}, #{oriName}, (SELECT MAX(NUM) FROM QNA))
		 	</insert>
		 	
		 	<resultMap type="QnaDTO" id="getDetailResult">
			 		<id column="NUM" property="num"/>
			 		<result column="TITLE" property="title"/>
			 		<result column="CONTENTS" property="contents"/>
			 		<result column="WRITER" property="writer"/>
			 		<result column="REGDATE" property="regDate"/>
			 		<result column="HIT" property="hit"/>
		 		<collection property="boardFileDTO" javaType="List" ofType="boardFileDTO">
		 			<id column="FILENUM" property="fileNum"/>
		 			<result column="FILENAME" property="fileName"/>
		 		</collection>
		 	</resultMap>
		 
		 </mapper>