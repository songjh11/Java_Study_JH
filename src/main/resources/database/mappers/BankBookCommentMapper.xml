<?xml version="1.0" encoding="UTF-8"?>
		<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.spring.bankbook.BankBookCommentDAO">

	<insert id="setCommentAdd" parameterType="BankBookCommentDTO">
		INSERT INTO BB_COMMENT VALUES (BOARD_SEQ.NEXTVAL, #{bookNum}, #{writer}, #{contents}, SYSDATE)
	</insert>
	
	<select id="getCommentList" parameterType="CommentPager"  resultType="BankBookCommentDTO">
		SELECT * FROM
		    (SELECT ROWNUM R, C.* FROM
		       (SELECT WRITER, CONTENTS, REGDATE 
			    FROM BB_COMMENT WHERE BOOKNUM=#{bookNum} 
			    ORDER BY NUM DESC) C)
		WHERE R BETWEEN #{startRow} and #{lastRow}
	</select>
	
</mapper>
